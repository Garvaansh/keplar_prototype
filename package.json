{
  "name": "kepler-dashboard",
  "version": "1.0.0",
  "description": "Exoplanet Discovery Dashboard with ML Backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:backend": "cd backend && python run.py",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "concurrently --kill-others-on-fail \"yarn start:backend\" \"yarn start:frontend\"",
    "start:backend": "cd backend && python run.py",
    "start:frontend": "cd frontend && npm run preview",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install",
    "setup": "npm install && npm run install:frontend && npm run install:backend"
  },
  "keywords": [
    "exoplanet",
    "machine-learning",
    "dashboard",
    "fastapi",
    "react",
    "kepler"
  ],
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  }
}
