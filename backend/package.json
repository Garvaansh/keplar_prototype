{
  "name": "kepler-backend",
  "version": "1.0.0",
  "description": "FastAPI backend for Kepler Dashboard",
  "private": true,
  "scripts": {
    "dev": "bash -c \"source venv/Scripts/activate && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000\"",
    "start": "bash -c \"source venv/Scripts/activate && uvicorn app.main:app --host 0.0.0.0 --port 8000\"",
    "install-deps": "bash -c \"source venv/Scripts/activate && pip install -r requirements.txt\"",
    "setup": "bash -c \"python -m venv venv && source venv/Scripts/activate && pip install -r requirements.txt\"",
    "test": "bash -c \"source venv/Scripts/activate && python -m pytest\"",
    "health": "curl http://localhost:8000/api/v1/health"
  }
}
